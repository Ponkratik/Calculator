<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp" >

    <TextView
        android:id="@+id/textview_result"
        style="@style/ResultTextView"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:text="@string/default_string"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3">
        <TableRow
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/button_clear"
                style="@style/SignButton"
                android:text="@string/button_ac"
                android:layout_marginEnd="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/button_open_bracket"
                style="@style/SignButton"
                android:text="@string/button_open_bracket"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <Button
                android:id="@+id/button_close_bracket"
                style="@style/SignButton"
                android:text="@string/button_close_bracket"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <Button
                android:id="@+id/button_backspace"
                style="@style/SignButton"
                android:text="@string/button_del"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/button_7"
                style="@style/NumButton"
                android:text="@string/button_7"
                android:layout_marginEnd="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/button_8"
                style="@style/NumButton"
                android:text="@string/button_8"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <Button
                android:id="@+id/button_9"
                style="@style/NumButton"
                android:text="@string/button_9"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <Button
                android:id="@+id/button_divide"
                style="@style/SignButton"
                android:text="@string/button_divide"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/button_4"
                style="@style/NumButton"
                android:text="@string/button_4"
                android:layout_marginEnd="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/button_5"
                style="@style/NumButton"
                android:text="@string/button_5"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <Button
                android:id="@+id/button_6"
                style="@style/NumButton"
                android:text="@string/button_6"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <Button
                android:id="@+id/button_multiply"
                style="@style/SignButton"
                android:text="@string/button_multiply"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/button_1"
                style="@style/NumButton"
                android:text="@string/button_1"
                android:layout_marginEnd="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/button_2"
                style="@style/NumButton"
                android:text="@string/button_2"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <Button
                android:id="@+id/button_3"
                style="@style/NumButton"
                android:text="@string/button_3"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <Button
                android:id="@+id/button_minus"
                style="@style/SignButton"
                android:text="@string/button_minus"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow
            android:layout_weight="1">
            <Button
                android:id="@+id/button_0"
                style="@style/NumButton"
                android:text="@string/button_0"
                android:layout_marginEnd="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/button_point"
                style="@style/SignButton"
                android:text="@string/button_point"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <Button
                android:id="@+id/button_equals"
                style="@style/EqualsButton"
                android:text="@string/button_equals"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <Button
                android:id="@+id/button_plus"
                style="@style/SignButton"
                android:text="@string/button_plus"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </TableRow>
    </TableLayout>

</LinearLayout>